<Page
    x:Class="barcodrod.io.Views.DecodePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Unloaded="ClearState"
    x:Name="dPage">
    
    <Grid x:Name="PageGrid">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <InfoBar   Margin="0,0,9,50" Canvas.ZIndex="1" Grid.Column="1" HorizontalAlignment="Stretch"   x:Name="ScanResult"   IsOpen="False" HorizontalContentAlignment="Stretch"  VerticalAlignment="Bottom"  ></InfoBar>

        <TeachingTip x:Name="TeachingTip" Grid.Column="2" Title="Decoding..." VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
            <TeachingTip.CloseButtonStyle>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </TeachingTip.CloseButtonStyle>
            <TeachingTip.CloseButtonContent>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" >
                    <TextBlock Text=" Cancel"  VerticalAlignment="Stretch" />
                </StackPanel>
            </TeachingTip.CloseButtonContent>

            <TeachingTip.Content>
                <StackPanel>
                    <ProgressRing x:Name="progressRing" IsActive="False" IsIndeterminate="False" Margin="0,0,0,5" Height="115" Width="115"/>
                    <TextBlock x:Name="TotalFiles" Margin="0,0,0,5" HorizontalAlignment="Center" Style="{ThemeResource BaseTextBlockStyle}" FontSize="20" />
                    <TextBlock x:Name="FailedDecodeProgressStat" Margin="0,0,0,20" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="WrapWholeWords" Visibility="Collapsed"/>
                    <Button x:Name="SaveCsv" HorizontalAlignment="Stretch" Click="SaveCSV" Margin="0">
                        <StackPanel Orientation="Horizontal" Height="Auto"  HorizontalAlignment="Stretch">
                            <SymbolIcon  Symbol="SaveLocal" VerticalAlignment="Stretch"/>
                            <TextBlock x:Name="SaveCsvTextBlock" Text="Save .CSV File"  Margin="5,0,0,0" IsColorFontEnabled="True" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="OpenCsv" HorizontalAlignment="Stretch" Click="OpenCSV"  Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal" Height="Auto"  HorizontalAlignment="Stretch">
                            <SymbolIcon  Symbol="OpenWith" VerticalAlignment="Stretch"/>
                            <TextBlock  Text="Open .CSV File"  Margin="5,0,0,0" IsColorFontEnabled="True" />
                        </StackPanel>
                    </Button>

                </StackPanel>
            </TeachingTip.Content>
            


        </TeachingTip>



        <ScrollViewer Margin= "10,10,0,0" Padding="0,0,10,0" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollMode="Enabled" >
            <StackPanel x:Name="ButtonStackPanel" Grid.Column="0"  Grid.ColumnSpan="1"   Width="Auto" VerticalAlignment="Top" Height="Auto"  HorizontalAlignment="Stretch"    >
                <Button x:Name="DecodeFromSnippingToolButton" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"  Margin="0,0,0,5"  Tapped="DecodeFromSnippingTool" Height="Auto">
                    <StackPanel Orientation="Horizontal" >
                        <SymbolIcon  Symbol="Cut"/>
                        <TextBlock  Text="Snipping Tool"  Margin="5"/>
                    </StackPanel>
                </Button>
                <Button x:Name="DecodeFromClipboardButton" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Margin="0,0,0,5" Tapped="DecodeFromClipboard" Height="Auto">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon  Symbol="Paste"/>
                        <TextBlock  Text="Clipboard Image"  Margin="5"/>
                    </StackPanel>
                </Button>
                <Button x:Name="DecodeFromFileButton" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Margin="0,0,0,5" Tapped="DecodeFromFilePicker" Height="Auto">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon  Symbol="BrowsePhotos"/>
                        <TextBlock  Text="Image File"  Margin="5"/>
                    </StackPanel>
                </Button>
                <Button x:Name="ImageFolderButton" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"  Margin="0,0,0,5"  Height="Auto" Tapped="BulkDecode">
                    <StackPanel Orientation="Horizontal" >
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xe8b7;" />
                        <TextBlock  Text="Folder"  Margin="5"/>
                    </StackPanel>
                </Button>
                <Button  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center"  Margin="0,0,0,5" Tapped="CustomCameraCaptureUI" Height="Auto" Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon  Symbol="Camera"/>
                        <TextBlock x:Name="WebcamButton"  Text="Windows Camera"  Margin="5"/>
                    </StackPanel>
                </Button>
                <Button x:Name="DirectShowButton" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center"  Margin="0,0,0,5"  Height="Auto" IsEnabled="False">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon  Symbol="Video"/>
                        <TextBlock x:Name="DirectShowButtonTextBlock"  Text="Webcam"  Margin="5"/>
                    </StackPanel>
                </Button>

               

                <ComboBox x:Name="comboBox1" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"  Margin="0,0,0,5" Height="Auto" SelectionChanged="DirectShowSourceChanged" PlaceholderText="Source">

                </ComboBox>
                <ComboBox x:Name="comboBox2" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"  Margin="0,0,0,5" Height="Auto" PlaceholderText="Select Resolution"  Visibility="Collapsed">

                </ComboBox>
                <Button x:Name="ClearButton" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"  Margin="0,0,0,5" Tapped="ClearState" Height="Auto" >
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon  Symbol="Delete" Foreground="Red" Opacity=".5"/>
                        <TextBlock Text="Clear All"   Margin="5" IsColorFontEnabled="True"/>
                    </StackPanel>
                </Button>

            </StackPanel>
            
        </ScrollViewer>



        
      



        <CommandBar  x:Name="TxtCommandBar"  CornerRadius="4" OverflowButtonVisibility="Auto"   IsDynamicOverflowEnabled="True" IsSticky="True" HorizontalAlignment="Center"  IsOpen="False" DefaultLabelPosition="Right"  Height="Auto"    Grid.Column="1"  Margin="0,10,0,0"  VerticalAlignment="Bottom" >



            <CommandBar.Style>
                <Style TargetType="CommandBar">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </CommandBar.Style>
            <AppBarButton x:Name="CopyTextButton" Icon="Copy" Label='Copy Text' VerticalAlignment="Stretch"  Click="CopyTextToClipboard"   IsEnabled="False" CornerRadius="4" />
            <AppBarButton x:Name="SaveTextButton" Icon="SaveLocal" Label="Save Text" Click="SaveText" IsEnabled="False" CornerRadius="4"/>
            <AppBarButton x:Name="OpenTextButton" Icon="OpenLocal" Label="Open Text" Click="OpenText"   IsEnabled="False"  CornerRadius="4" />
            <AppBarSeparator  />
            <AppBarButton x:Name="OpenTextWithButton" Icon="OpenWith" Label="Launch" Click="ShareText"   IsEnabled="False"  CornerRadius="4" />


        </CommandBar>

        <TextBox Grid.Column="1"    x:Name="TxtActivityLog"  Padding="8,5,8,0" Canvas.ZIndex="0"  Margin="0,10,10,50" Height="Auto"
                 AcceptsReturn="True" TextWrapping="Wrap" 
                      IsEnabled="False" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"    ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollMode="Enabled" PlaceholderText="Pick a tool on the left to begin decoding." />




        <CommandBar   CornerRadius="4" OverflowButtonVisibility="Auto"   IsDynamicOverflowEnabled="True" IsSticky="True" HorizontalAlignment="Center"   DefaultLabelPosition="Right"  Height="Auto"    Grid.Column="2"  Margin="0,10,0,0"  VerticalAlignment="Bottom" >
            <CommandBar.Style>
                <Style TargetType="CommandBar">
                    <Setter Property="Background" Value="Transparent"/>
                </Style>
            </CommandBar.Style>
            <AppBarButton x:Name="CopyImageButton" Icon="Copy" Label="Copy Image" Click="CopyImage" IsEnabled="False" CornerRadius="4"/>
            <AppBarButton x:Name="SaveImageButton" Icon="SaveLocal" Label="Save Image" Click="SaveImage"  IsEnabled="False" CornerRadius="4"/>
            <AppBarButton x:Name="OpenImageButton" Icon="OpenWith" Label='Open Image'  Click="OpenImage"  IsEnabled="False" CornerRadius="4">
            </AppBarButton>
            <AppBarSeparator />
            <AppBarButton x:Name="ZoomToggle"  IsEnabled="False" Click="ToggleZoom"  Label="Fill Mode"  CornerRadius="4">
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xe9a6;" />
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarElementContainer VerticalAlignment="Top">
   

                    <Slider x:Name="ZoomSlider" Margin="5,10,0,0" IsEnabled="False" Visibility="Collapsed"
                        
                        Maximum="{x:Bind BarcodeScroller.MaxZoomFactor, Mode=OneWay}"
                        Minimum="{x:Bind BarcodeScroller.MinZoomFactor, Mode=OneWay}"
                        Value="2"
                        Width="150"
                        StepFrequency=".25"
                        ValueChanged="ZoomSlider_ValueChanged" />

             

            </AppBarElementContainer>
  



        </CommandBar>
        <ScrollViewer  Grid.Column = "2" x:Name="BarcodeScroller"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,10,50" IsEnabled="False" Padding="10" Visibility="Collapsed" ZoomMode="Enabled" />
        <Image Grid.Column = "2" x:Name="BarcodeViewer"   Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,10,10,50"  />

        
        
    </Grid>
</Page>