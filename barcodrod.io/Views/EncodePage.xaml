<Page
    x:Class="barcodrod.io.Views.EncodePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Width="210" HorizontalAlignment="Left"  >
            <Button  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,5" Tapped="CreateBarcode">
                <StackPanel Orientation="Horizontal"  >
                    <SymbolIcon  Symbol="Accept"/>
                    <TextBlock  Text="Create Barcode"  Margin="10"/>
                </StackPanel>
            </Button>
            <ListBox x:Name="BarcodeSelector" Height="226" Padding="8,0,16,8" SelectedValue="QR_CODE">
                <x:String>QR_CODE</x:String>
                <x:String>CODE_128</x:String>
                <x:String>CODE_39</x:String>
                <x:String>EAN_8</x:String>
                <x:String>ITF</x:String>
                <x:String>UPC_A</x:String>
                <x:String>UPC_E</x:String>
                <x:String>CODABAR</x:String>
                <x:String>DATA_MATRIX</x:String>
                <x:String>PDF_417</x:String>
                <x:String>AZTEC</x:String>
                <x:String>MSI</x:String>
                <x:String>PLESSEY</x:String>
            </ListBox>

        </StackPanel>


        <StackPanel Grid.Column="1" VerticalAlignment="Stretch" Margin="0,0,30,0">
            <TextBox x:Name="TxtActivityLog" Padding="8,0,16,8" MaxHeight="272"  VerticalAlignment="Stretch"  
                 AcceptsReturn="True" TextWrapping="Wrap"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"  MinHeight="280"   Grid.Column="2"   IsEnabled="True" Height="Auto"  Width="Auto"    />
            <TextBlock x:Name="EncodeError" Text="" Margin="0,10,0,0" HorizontalAlignment="Left" TextWrapping="WrapWholeWords"/>
        </StackPanel>

        <StackPanel Grid.Column="2" Width="Auto" HorizontalAlignment="Stretch" >
            <Image x:Name="BarcodeViewer"  Stretch="Uniform" CanDrag="False" MinHeight="200" Width="Auto" Height="280" />
            <CommandBar DefaultLabelPosition="Right" IsDynamicOverflowEnabled="True" HorizontalAlignment="Center">
                <CommandBar.PrimaryCommands>
                    <AppBarButton x:Name="SaveImageButton" Icon="SaveLocal" Label="Save Image" Click="SaveImage" IsEnabled="False"/>
                    <AppBarSeparator />
                    <AppBarButton x:Name="OpenImageButton" Icon="OpenLocal" Label="Open Image" Click="OpenImage"  IsEnabled="False"/>
                </CommandBar.PrimaryCommands>
            </CommandBar>
        </StackPanel>

    </Grid>
</Page>
